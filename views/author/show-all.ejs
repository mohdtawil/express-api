<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Boxes</title>
  </head>
  <body>
      <%- include('../../partials/navbar.ejs') %>
      <div class="container">
          <div class="row">
              <div class="col-12">
                <h1 class="display-3">All Authors <a href="/api/authors" class="btn btn-info text-white mx-5">View API</a></h1>
                <p class="lead"><span class="fw-bold">All Data API: </span> http://localhost:2091/api/authors <span class="text-success mx-3 fw-bold">Method: </span> GET</p>
                <p class="lead"><span class="fw-bold">Add API: </span> http://localhost:2091/api/add/author <span class="text-primary mx-3 fw-bold">Keys: </span> name , email<span class="text-success mx-3 fw-bold">Method: </span> POST</p>
                <p class="lead"><span class="fw-bold">Remove API: </span> http://localhost:2091/api/remove/author/{13} <span class="text-success mx-3 fw-bold">Method: </span> DELETE</p>
                <p class="lead"><span class="fw-bold">Edit API: </span> http://localhost:2091/api/edit/author/{15} <span class="text-primary mx-3 fw-bold">Keys: </span> name , email <span class="text-success mx-3 fw-bold">Method: </span> PUT</p>
                
              </div>
              <div class="col-12 mt-5">
                <div class="row">
                    <% if(authors.length == 0) { %>
                        <p class="lead">Not have any Author !!!</p>
                    <% } else { %>
                       
                            <table class="table">
                                <thead>
                                  <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Actions</th>
                                  </tr>
                                </thead>
                                <tbody>
                                    <% var count = 0; %>
                                    <% authors.forEach((author) => { %>
                                    <tr>
                                        <th scope="row"><%= ++count %></th>
                                        <td><%= author.name %></td>
                                        <td><%= author.email %></td>
                                        <td class="d-flex">
                                            <form action="/remove/author/<%= author.authorid %>?_method=DELETE" method="post">
                                                <button class="btn btn-danger btn-sm">Remove</button>
                                            </form>

                                            <a class="btn btn-warning text-white btn-sm mx-3" href="/edit/author/<%= author.authorid %>">Edit</a>

                                        </td>
                                    </tr>
                                    <% }) %>  
                                </tbody>
                              </table>
                    
                              
                    <% } %>
                </div>
              </div>
          </div>
      </div>
    
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
