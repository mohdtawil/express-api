<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Edit Box</title>
  </head>
  <body>
      <%- include('../../partials/navbar.ejs') %>
      <div class="container">
          <div class="row">
              <div class="col-12">
                <h1 class="display-3">Edit Box (<%= box.title %>)</h1>
                <p><%= genres %></p>
              </div>
              <div class="col-md-6 mt-5" >
                <form action="/edit/box/<%= box.boxid %>?_method=PUT" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                      <label for="" class="form-label">Title</label>
                      <input type="text" required name="title" value="<%= box.title %>" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="" class="form-label">Author <%= box.author_id %></label>
                        <select name="author_id" id="" class="form-control">
                            <option value="0">Choice</option>
                            <% authors.forEach((author) => { %>
                                <%  if(author.authorid == box.author_id) { %>
                                    <option selected value="<%= author.authorid %>"><%= author.name %></option>
                                <% } else { %>
                                    <option value="<%= author.authorid %>"><%= author.name %></option>
                                <% } %>

                            <% }) %>
                        </select>
                    </div>
                    <div class="mb-3">
                      <label for="" class="form-label">Genres</label>
                      
                      
                      
                      <br>
                        <%
                        var a  = box.genres_ides;
                        var b = a.split(',').map(function(item) {
                            return parseInt(item, 10);
                        });
                        %>
                          <% genres.forEach((genre) => { %>
                            
                           <% let index = b.indexOf(genre.id); %>
                              <% if(index == -1) { %>
                                <input type="checkbox" name="genre_id"   value="<%= genre.id %>" id="<%= genre.id %>">
                                <label for="<%= genre.id %>"><%= genre.name %></label>
                                <br>
                              <% } else { %>
                                <input type="checkbox" checked name="genre_id"  value="<%= genre.id %>" id="<%= genre.id %>">
                                <label for="<%= genre.id %>"><%= genre.name %></label>
                                <br>
                              <% } %>
                            
                            
                          <% }) %>
                      
                  </div>
                    <div class="mb-3">
                        <label for="" class="form-label">Description</label>
                        <input type="text" required name="description" value="<%= box.description %>"  class="form-control">
                    </div>
                    <hr>
                    <div>
                      <label>Upload box picture</label>
                      <input type="file" name="box-picture" />
                  </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                  </form>
              </div>
          </div>
      </div>
    
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
