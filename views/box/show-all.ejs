<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Boxes</title>
  </head>
  <body>
      <%- include('../../partials/navbar.ejs') %>
      <div class="container">
          <div class="row">
              <div class="col-12">
                <h1 class="display-3">All Boxes <a href="/api/boxes" class="btn btn-info text-white mx-5">View API</a></h1>
                
                <p class="lead"><span class="fw-bold">All Data API: </span> http://localhost:2091/api/boxes <span class="text-success mx-3 fw-bold">Method: </span> GET</p>
                <p class="lead"><span class="fw-bold">Add API: </span> http://localhost:2091/api/add/box <span class="text-primary mx-3 fw-bold">Keys: </span> title , author_id , description <span class="text-success mx-3 fw-bold">Method: </span> POST</p>
                <p class="lead"><span class="fw-bold">Remove API: </span> http://localhost:2091/api/remove/box/{13} <span class="text-success mx-3 fw-bold">Method: </span> DELETE</p>
                <p class="lead"><span class="fw-bold">Edit API: </span> http://localhost:2091/api/edit/box/{15} <span class="text-primary mx-3 fw-bold">Keys: </span> title , author_id , description <span class="text-success mx-3 fw-bold">Method: </span> PUT</p>
                
            </div>

              <div class="col-12 mt-5">
                <img src="/images/uploadsqrcode_zoom.us.png" alt="">
                <div class="row">
                    <% if(boxes.length == 0) { %>
                        <p class="lead">Not have any Box !!!</p>
                    <% } else { %>
                       
                            <table class="table">
                                <thead>
                                  <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">ID</th>
                                    <th scope="col">Author</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Picture</th>
                                    <th scope="col">Genre Names</th>
                                    <th scope="col">Genre Ides</th>
                                    <th scope="col">Actions</th>
                                  </tr>
                                </thead>
                                <tbody>
                                    <% var count = 0; %>
                                    <% boxes.forEach((box) => { %>
                                    <tr>
                                        <th scope="row"><%= ++count %></th>
                                        <td><%= box.title %></td>
                                        <td><%= box.boxid %></td>
                                        <td><%= box.author_name %></td>
                                        <td><%= box.description %></td>
                                        <td><img width="90" height="90" src="http://localhost:2091/images/<%= box.picture %>" alt=""></td>
                                        <td><%= box.genres_names %></td>
                                        <td><%= box.genres_ides %></td>
                                        <td >
                                          <div class="d-flex">
                                            <form action="/remove/box/<%= box.boxid %>?_method=DELETE" method="post">
                                              <button class="btn btn-danger btn-sm">Remove</button>
                                          </form>

                                          <a class="btn btn-warning text-white btn-sm mx-3" href="/edit/box/<%= box.boxid %>">Edit</a>

                                          </div>
                                           
                                        </td>
                                        
                                    </tr>
                                    <% }) %>  
                                </tbody>
                              </table>
                    
                              
                    <% } %>
                </div>
              </div>
          </div>
      </div>
    
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    -->
  </body>
</html>

